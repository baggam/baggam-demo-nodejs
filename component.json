{
    "title": "Baggam Demo Component nodejs",
    "description": "My demo component on elastic.io",
    "docsUrl":"https://github.com/elasticio/baggam-demo-nodejs",
    "credentials": {
        "fields": {
            "name": {
                "label": "Your name",
                "required": true,
                "viewClass": "TextFieldView"
            }
        }
    },
    "triggers": {
        "getHello": {
            "main": "./lib/triggers/getHello.js",
            "type": "polling",
            "title": "Query Hello",
            "metadata": {
                "out": "./lib/schemas/getHello.out.json"
            }
        }
    },
    "actions": {
        "updateHello": {
            "main": "./lib/actions/updateHello.js",
            "title": "Update Hello",
            "metadata": {
                "in": "./lib/schemas/updateHello.in.json",
                "out": "./lib/schemas/updateHello.out.json"
            }
        }
    }
}
